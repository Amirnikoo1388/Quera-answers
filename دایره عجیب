#include <iostream>

using namespace std;

int main()
{
    int n;
    int k;
    
    cin >> n;
    cin >> k;
    
    int sum = 0;
    int i = 1;
    
    if (n == 1 || n == k){
        cout << 1;
    }else {
            i = i + k;
            sum = sum + 1;
            while (i != 1){
                i = i + k;
                if (i == 1){
                    break;
                }
                
                if ( i > n){
                    i = i - n;
                    }
    
                
                sum++;
            }
            
            cout << sum;
    }
    


    return 0;
}
